<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="cms_page" remove="true" />
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="banner_men">
                <arguments>
                    <argument name="block_id" xsi:type="string">banner_men</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="banner_women">
                <arguments>
                    <argument name="block_id" xsi:type="string">banner_women</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="banner_stores">
                <arguments>
                    <argument name="block_id" xsi:type="string">banner_stores</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
